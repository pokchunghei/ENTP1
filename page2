      scores.Ne += parseInt(document.getElementById('slider-Ne4').value);
	  scores.Si += parseInt(document.getElementById('slider-Si4').value);
      scores.Ni += parseInt(document.getElementById('slider-Ni4').value);
	  scores.Te += parseInt(document.getElementById('slider-Te4').value);
      scores.Fe += parseInt(document.getElementById('slider-Fe4').value);
	  scores.Ti += parseInt(document.getElementById('slider-Ti4').value);
      scores.Fi += parseInt(document.getElementById('slider-Fi4').value);
      scores.Se += parseInt(document.getElementById('slider-Se5').value);
      scores.Ne += parseInt(document.getElementById('slider-Ne5').value);
	  scores.Si += parseInt(document.getElementById('slider-Si5').value);
      scores.Ni += parseInt(document.getElementById('slider-Ni5').value);
	  scores.Te += parseInt(document.getElementById('slider-Te5').value);
      scores.Fe += parseInt(document.getElementById('slider-Fe5').value);
	  scores.Ti += parseInt(document.getElementById('slider-Ti5').value);
      scores.Fi += parseInt(document.getElementById('slider-Fi5').value);

      // 將分數存儲到 localStorage
      localStorage.setItem('mbtiScores', JSON.stringify(scores));

      // 跳轉到結果頁面
      window.location.href = 'result.html';
    };
  </script>
</body>
</html>
