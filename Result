      background-color: #f4f4f4;
    }
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: white;
    }
    h1 {
      text-align: center;
    }
    .bar {
      display: flex;
      align-items: center;
      margin: 10px 0;
    }
    .bar-label {
      width: 50px;
      text-align: left;
    }
    .bar-fill {
      height: 30px;
      border-radius: 5px;
      margin-left: 10px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    table, th, td {
      border: 1px solid #ddd;
    }
    th, td {
      padding: 8px;
      text-align: center;
    }
    .analysis {
      margin-top: 20px;
      padding: 10px;
      background-color: #e7f3fe;
      border-left: 6px solid #2196F3;
    }
